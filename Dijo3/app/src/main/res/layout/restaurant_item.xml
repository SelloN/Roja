<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:layout_marginBottom="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    android:id="@+id/restaurantsCV">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/restaurantPic"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restaurantNameTV"
            android:textSize="20sp"
            android:maxLines="2"
            android:layout_toLeftOf="@+id/ratingsTV"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/restaurantPic"
            android:layout_toEndOf="@+id/restaurantPic" />
        <TextView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:id="@+id/ratingsTV"
            android:layout_alignParentRight="true"
            android:textColor="@color/primary_text_default_material_dark"
            android:textSize="18sp"
            android:background="@color/myAccentColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distanceTV"
            android:layout_marginTop="5dp"
            android:textColor="@color/half_black"
            android:textSize="12sp"
            android:layout_below="@+id/restaurantNameTV"
            android:layout_alignLeft="@+id/restaurantNameTV"
            android:layout_alignStart="@+id/restaurantNameTV" />


    </RelativeLayout>


</android.support.v7.widget.CardView>